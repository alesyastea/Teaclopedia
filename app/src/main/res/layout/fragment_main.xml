<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF0EA"
    android:backgroundTint="#EFF0EA"
    tools:context=".fragments.MainFragment">

    <ImageView
        android:id="@+id/iv_teaclopedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_teaclopedia"
        android:layout_marginTop="-10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn_puerh_tea"
        app:cornerRadius = "35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:drawableLeft="@drawable/ic_puerh_tea"
        android:paddingLeft="5dp"
        android:drawableRight="@drawable/ic_arrow"
        android:fontFamily="@font/esthetique"
        android:gravity="left|center_vertical"
        android:text="Pu-erh tea"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_teaclopedia" />

    <Button
        android:id="@+id/btn_oolong_tea"
        app:cornerRadius="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Oolong tea"
        android:fontFamily="@font/esthetique"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/ic_oolong_tea"
        android:paddingLeft="5dp"
        android:drawableRight="@drawable/ic_arrow"
        android:gravity="left|center_vertical"
        android:layout_marginTop="-5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_puerh_tea" />

    <Button
        android:id="@+id/btn_green_tea"
        app:cornerRadius="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Green tea"
        android:fontFamily="@font/esthetique"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/ic_green_tea"
        android:paddingLeft="5dp"
        android:drawableRight="@drawable/ic_arrow"
        android:gravity="left|center_vertical"
        android:layout_marginTop="-5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_oolong_tea" />

    <Button
        android:id="@+id/btn_red_tea"
        app:cornerRadius="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Red tea"
        android:fontFamily="@font/esthetique"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/ic_red_tea"
        android:paddingLeft="5dp"
        android:drawableRight="@drawable/ic_arrow"
        android:gravity="left|center_vertical"
        android:layout_marginTop="-5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_green_tea" />

    <Button
        android:id="@+id/btn_yellow_tea"
        app:cornerRadius="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yellow tea"
        android:fontFamily="@font/esthetique"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/ic_yellow_tea"
        android:paddingLeft="5dp"
        android:drawableRight="@drawable/ic_arrow"
        android:gravity="left|center_vertical"
        android:layout_marginTop="-5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_red_tea" />

    <Button
        android:id="@+id/btn_white_tea"
        app:cornerRadius="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="White tea"
        android:fontFamily="@font/esthetique"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/ic_white_tea"
        android:paddingLeft="5dp"
        android:drawableRight="@drawable/ic_arrow"
        android:gravity="left|center_vertical"
        android:layout_marginTop="-5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_yellow_tea" />


</androidx.constraintlayout.widget.ConstraintLayout>